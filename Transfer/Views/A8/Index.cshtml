        //#region fileSubmitFunction (把檔案上傳到指定資料夾)
        function fileSubmitFunction()
        {
            $.blockUI();
            var dataString;
            var action = $("#form0").attr("action");
            if ($("#form0").attr("enctype") == "multipart/form-data") {
                dataString = new FormData($("#form0").get(0));
                processData = false;
            }
            else {
