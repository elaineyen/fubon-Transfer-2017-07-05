@{
    ViewBag.Manu = "D0Main";
    ViewBag.SubManu = "D05Sub";
    ViewBag.Title = "D05(套用產品組合代碼)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .ui-datepicker-trigger {
        border: none;
        background: none;
    }

    .error {
        color: red;
    }
</style>
<div class="container" id="main">
    <div class="row main_hand">
        <div class="col-md-12 main_hand_div">
            <table>
                <tr>
                    <td>查詢時，如無輸入任何查詢條件，則查全部。</td>
                </tr>
            </table>
            <form id="myForm1">
                <table style="width:100%;margin-top:5px">
                    <tr>
                        <td style="width:40%">
                            <label>套用產品群代碼 :</label>
                            <input type="text" id="Group_Product_Code" name="Group_Product_Code" maxlength="3">
                        </td>
                        <td>
                            <label>產品群別說明 :</label>
                            <input type="text" id="Group_Product" name="Group_Product" style="width:500px" maxlength="100">
                        </td>
                    </tr>
                    <tr>
                        <td style="white-space:nowrap">
                            <label>產品 :</label>
                            <input type="text" id="Product_Code" name="Product_Code" style="width:235px" maxlength="64">
                        </td>
                        <td>
                            <label>資料處理日期 :</label>
                            <input type="text" id="Processing_Date" name="Processing_Date" maxlength="10">
                        </td>
                    </tr>
                </table>
            </form>
            <table style="margin-top:4px" align="center">
                <tr>
                    <td id="tdSearch">
                        <input type="button" class="btn btn-primary" value="查詢" id="btnSearch" />
                    </td>
                    <td id="tdReset">
                        <input type="button" class="btn btn-primary" value="重設" id="btnReset" />
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div>
        <input type="button" class="btn btn-primary" id="btnAdd" value="新增" />
    </div>

    <div class="row main_body" style="overflow:auto;height:100%;">
        <div class="col-md-12">
            <div class="viewDetail">
                <div id="jqgridDiv" class="jqd">
                </div>
            </div>
        </div>
    </div>

    <div id="dialogEdit" title="">
        <input type="hidden" id="actionType" value="" />
        <table style="width:100%">
            <tr>
                <td style="white-space:nowrap; text-align:right">
                    套用產品群代碼：
                </td>
                <td style="white-space:nowrap">
                    <input type="text" name="editGroup_Product_Code" id="editGroup_Product_Code" maxlength="3">
                </td>
            </tr>
            <tr>
                <td style="white-space:nowrap; text-align:right">
                    產品群別說明：
                </td>
                <td style="white-space:nowrap">
                    <input type="text" name="editGroup_Product" id="editGroup_Product" maxlength="100">
                </td>
            </tr>
            <tr>
                <td style="white-space:nowrap; text-align:right">
                    產品：
                </td>
                <td style="white-space:nowrap">
                    <input type="text" name="editProduct_Code" id="editProduct_Code" maxlength="64">
                </td>
            </tr>
            <tr>
                <td style="white-space:nowrap; text-align:right">
                    資料處理日期：
                </td>
                <td style="white-space:nowrap">
                    <span id="spanProcessing_Date"></span>
                </td>
            </tr>
            <tr>
                <td colspan="2">&nbsp;</td>
            </tr>
            <tr>
                <td colspan="2" style="white-space:nowrap; text-align:center">
                    <input type="button" id="btnSave" value="儲存" />
                    &nbsp;&nbsp;
                    <input type="button" id="btnDelete" value="刪除" />
                    &nbsp;&nbsp;
                    <input type="button" id="btnCancel" value="取消" />
                </td>
            </tr>
        </table>
    </div>
</div>

<script src="~/Scripts/i18n/datepicker-zh-TW.js"></script>  @*use datepicker*@
<script src="~/Scripts/jquery.validate.min.js"></script> @*use validate*@
<script src="~/Scripts/verification.js"></script> @*use validate*@

<script type="text/javascript">
    $(function () {
        //#region 註冊URL
        var url = {};
        url.getAllData = '@Url.Action("GetD05AllData", "D0")';
        url.getData = '@Url.Action("GetD05Data", "D0")';
        url.saveData = '@Url.Action("SaveD05", "D0")';
        url.deleteData = '@Url.Action("DeleteD05", "D0")';
        //#endregion 註冊URL

        //#region 產生datepicker
        created.createDatepicker('Processing_Date', false, null);
        //#endregion

        //#region 一開始就出現全部資料
        GetAllData();
        //#endregion

        //#region 取得全部資料
        function GetAllData() {
            showJqgrid("1", "", "", "", "");
        }
        //#endregion

        //#region 去controller 撈取資料並且用JqGrid套件顯示
        function showJqgrid(type, groupProductCode, groupProduct, productCode, processingDate) {
            clearJqgrid();

            var title = ''; //標頭
            var colNameArray = []; //每個欄位名稱要對應傳入資料屬性
            var dataString = "";
            var urlString = "";

            title = 'D05套用產品組合代碼';
            colNameArray = ['Group_Product_Code', 'Group_Product',
                            'Product_Code', 'Processing_Date'];

            switch (type) {
                case "1":
                    dataString = "";
                    urlString = url.getAllData;
                    break;
                case "2":
                    dataString = JSON.stringify({
                        groupProductCode: groupProductCode,
                        groupProduct: groupProduct,
                        productCode: productCode,
                        processingDate: processingDate
                    });

                    urlString = url.getData;
                    break;
            }

            $.ajax({
                type: "POST",
                data: dataString,
                dataType: "json",
                url: urlString,
                contentType: 'application/json',
                error: function () {
                    toastr.error("請重新登入!");
                }
            })
            .done(function (result) {
                if (result.RETURN_FLAG) {
                    var widthArray =
                        ['L', 'L',
                         'L', 'L'
                        ];

                    var data = result.Datas.Data;

                    createJqgrid("list1", "pager1", colNameArray, widthArray, data, title);
                }
                else {
                    toastr.error(result.DESCRIPTION);
                }
            });
        }
        //#endregion

        //#region clearJqgrid (清除JqGrid)
        function clearJqgrid() {
            $('#jqgridDiv').children().remove();
        }
        //#endregion clearJqgrid

        //#region createJqgrid (建立JqGrid套件)
        //listId (Jqgrid產生table的ID)
        //pagerId (下方產生筆數的ID)
        //colNameArray (設定上方Title *要與Data 傳入Json 屬性相對應)
        //widthArray (寬度設定 L=> 210 M=>120)
        //data (要秀的資料Json型別Data)
        //title (標題)
        function createJqgrid(listId, pagerId, colNameArray, widthArray, data, title) {
            var colModelArray = [];
            var jagridLWidth = 210;
            var jagridMWidth = 120;

            if (colNameArray.length > 0 && colNameArray.length === widthArray.length) {
                colModelArray = [
                                    { name: "act", index: "act", width: 100, sortable: false },
                                    { name: "Group_Product_Code", index: "Group_Product_Code", align: 'center' },
                                    { name: "Group_Product", index: "Group_Product", width: '410px', align: 'center' },
                                    { name: "Product_Code", index: "Product_Code", align: 'center' },
                                    { name: "Processing_Date", index: "Processing_Date", align: 'center' },
                ];

                colNameArray = ['Actions','套用產品群代碼', '產品群別說明',
                                '產品', '資料處理日期'];

                $('#jqgridDiv').append('<table id="' + listId + '"></table>');
                $('#jqgridDiv').append('<div id="' + pagerId + '"></div>');

                $("#" + listId).jqGrid({
                    data: data,
                    datatype: "local",
                    mtype: "POST",
                    colNames: colNameArray,
                    colModel: colModelArray,
                    rowNum: 10, //一頁筆數
                    rowList: [10, 20, 30], //設定一頁幾筆
                    pager: '#' + pagerId,
                    height: jqgridCustom.setHeight,
                    sortorder: "desc",
                    caption: title, //標題
                    resizable: false,
                    autowidth: true,
                    shrinkToFit: false,
                    viewsortcols: [true, 'vertical', true],
                    viewrecords :true,
                    ajaxRowOptions: { contentType: "application/json" },
                    serializeRowData: function (data) {
                        return JSON.stringify(data);
                    },
                    loadComplete: function () {
                        var table = $(this);
                        jqgridCustom.updatePagerIcons(table);
                        jqgridCustom.randerAction(listId, 'D05');
                    },
                });

                $("#" + listId).jqGrid('navGrid', '#' + pagerId, { edit: false, add: false, del: false });
            }
        }
        //#endregion createJqgrid

        //#region 註冊click事件
        $('input:button').each(function () {
            var id = $(this).attr('id');
            switch (id) {
                case 'btnReset':
                    $("#" + id).on('click', function () { SearchReset(); });
                    break;
                case 'btnSearch':
                    $("#" + id).on('click', function () { SearchData(); });
                    break;
                case 'btnAdd':
                    $("#" + id).on('click', function () { AddData(); });
                    break;
                case 'btnSave':
                    $("#" + id).on('click', function () { SaveData(); });
                    break;
                case 'btnDelete':
                    $("#" + id).on('click', function () { DeleteData(); });
                    break;
                case 'btnCancel':
                    $("#" + id).on('click', function () { $("#dialogEdit").dialog("close"); });
                    break;
            }
        })
        //#endregion 註冊click事件

        //#region SearchReset
        function SearchReset() {
            $('#Group_Product_Code').val("");
            $('#Group_Product').val("");
            $('#Product_Code').val("");
            $('#Processing_Date').val("");
        }
        //#endregion

        //#region SearchData
        function SearchData() {
            var groupProductCode = $('#Group_Product_Code').val().trim();
            var groupProduct = $('#Group_Product').val().trim();
            var productCode = $('#Product_Code').val().trim();
            var processingDate = $('#Processing_Date').val().trim();

            if (processingDate != "") {
                if (verified.isDate(processingDate, false) == false) {
                    toastr.error("資料處理日期 格式錯誤(yyyy/MM/dd)");
                    return false;
                }
            }

            showJqgrid("2", groupProductCode, groupProduct, productCode, processingDate);
        }
        //#endregion

        //#region dialogEdit
        $("#dialogEdit").dialog({
            autoOpen: false,
            resizable: true,
            height: 'auto',
            width: 'auto',
            modal: true,
            title: '',
            position: { my: "center", at: "center", of: window },
            closeText: "取消",
            resizable: true,
        });
        //#endregion

        //#region AddData
        function AddData() {
            $("#dialogEdit").dialog({ title: "新增" });

            $("#actionType").val("Add");

            $('#editGroup_Product_Code').val("").prop('disabled', false);
            $('#editGroup_Product').val("").prop('disabled', false);
            $('#editProduct_Code').val("").prop('disabled', false);
            $('#spanProcessing_Date').html("").prop('disabled', true);

            $('#btnSave').show();
            $('#btnDelete').hide();

            $("#dialogEdit").dialog("open");
        }
        //#endregion

        //#region SaveData
        function SaveData() {
            var actionType = $('#actionType').val();
            var groupProductCode = $('#editGroup_Product_Code').val().trim();
            var groupProduct = $('#editGroup_Product').val().trim();
            var productCode = $('#editProduct_Code').val().trim();

            if (groupProductCode == "") {
                toastr.error("套用產品群代碼 必填");
                return false;
            }

            if (groupProduct == "") {
                toastr.error("產品群別說明 必填");
                return false;
            }

            if (productCode == "") {
                toastr.error("產品 必填");
                return false;
            }

            $.ajax({
                type: "POST",
                data: JSON.stringify({
                    actionType: actionType,
                    groupProductCode: groupProductCode,
                    groupProduct: groupProduct,
                    productCode: productCode
                }),
                dataType: "json",
                url: url.saveData,
                contentType: 'application/json',
                error: function () {
                    toastr.error("請重新登入!");
                }
            })
            .done(function (result) {
                if (result.RETURN_FLAG) {
                    toastr.success(result.DESCRIPTION);
                    $("#dialogEdit").dialog("close");
                    SearchReset();
                    SearchData();
                }
                else {
                    toastr.error(result.DESCRIPTION);
                }
            });
        }
        //#endregion

        //#region DeleteData
        function DeleteData() {
            if (confirm("確定刪除？")) {
                $.ajax({
                    type: "POST",
                    data: JSON.stringify({
                        productCode: $('#editProduct_Code').val()
                    }),
                    dataType: "json",
                    url: url.deleteData,
                    contentType: 'application/json',
                    error: function () {
                        toastr.error("請重新登入!");
                    }
                })
                .done(function (result) {
                    if (result.RETURN_FLAG) {
                        toastr.success(result.DESCRIPTION);
                        $("#dialogEdit").dialog("close");
                        SearchReset();
                        SearchData();
                    }
                    else {
                        toastr.error(result.DESCRIPTION);
                    }
                });
            }
        }
        //#endregion
    });

    function D05list1Edit(id) {
        $("#dialogEdit").dialog({ title: "修改" });

        $("#actionType").val("Modify");

        if (id == null) {
            alert("請選取要修改的資料行");
            return false;
        }

        $('#editGroup_Product_Code').val($("#list1").getCell(id, "Group_Product_Code")).prop('disabled', false);
        $('#editGroup_Product').val($("#list1").getCell(id, "Group_Product")).prop('disabled', false);
        $('#editProduct_Code').val($("#list1").getCell(id, "Product_Code")).prop('disabled', true);
        $('#spanProcessing_Date').html($("#list1").getCell(id, "Processing_Date")).prop('disabled', true);

        $('#btnSave').show();
        $('#btnDelete').hide();

        $("#dialogEdit").dialog("open");
    }

    function D05list1View(id) {
        $("#dialogEdit").dialog({ title: "檢視" });

        $("#actionType").val("View");

        if (id == null) {
            alert("請選取要檢視的資料行");
            return false;
        }

        $('#editGroup_Product_Code').val($("#list1").getCell(id, "Group_Product_Code")).prop('disabled', true);
        $('#editGroup_Product').val($("#list1").getCell(id, "Group_Product")).prop('disabled', true);
        $('#editProduct_Code').val($("#list1").getCell(id, "Product_Code")).prop('disabled', true);
        $('#spanProcessing_Date').html($("#list1").getCell(id, "Processing_Date")).prop('disabled', true);

        $('#btnSave').hide();
        $('#btnDelete').hide();

        $("#dialogEdit").dialog("open");
    }

    //#region DeleteData
    function D05list1Dele(id) {
        $("#dialogEdit").dialog({ title: "刪除" });

        $("#actionType").val("Delete");

        if (id == null) {
            alert("請選取要刪除的資料行");
            return false;
        }
        else {
            $('#editGroup_Product_Code').val($("#list1").getCell(id, "Group_Product_Code")).prop('disabled', true);
            $('#editGroup_Product').val($("#list1").getCell(id, "Group_Product")).prop('disabled', true);
            $('#editProduct_Code').val($("#list1").getCell(id, "Product_Code")).prop('disabled', true);
            $('#spanProcessing_Date').html($("#list1").getCell(id, "Processing_Date")).prop('disabled', true);

            $('#btnSave').hide();
            $('#btnDelete').show();

            $("#dialogEdit").dialog("open");
        }
    }
    //#endregion
</script>